        margin-top: 10px;
    }

    .col-md-10 .btn-default {
        color: blue;
        margin-left: 80px;
    }
</style>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
